<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageAlbumCover"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:src="@android:color/white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/textAlbumName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="앨범명"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textColor="@color/colorExplanation"
        app:layout_constraintTop_toBottomOf="@id/imageAlbumCover"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/textSinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="가수"
        android:layout_marginTop="4dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="@font/nanum_barun_gothic"
        android:textColor="@color/colorExplanation"
        app:layout_constraintTop_toBottomOf="@id/textAlbumName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/marginTop_basic"/>


</androidx.constraintlayout.widget.ConstraintLayout>