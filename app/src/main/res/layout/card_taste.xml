<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="6dp">

    <ImageView
        android:id="@+id/tasteImage"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:src="@drawable/border_secondary_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tasteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="#취향명"
        android:fontFamily="@font/nanum_barun_gothic_bold"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@android:color/white"
        android:shadowColor="@android:color/black"
        android:shadowRadius="4.0"
        android:shadowDx="7.0"
        android:shadowDy="7.0"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toTopOf="@id/tasteImage"
        app:layout_constraintBottom_toBottomOf="@id/tasteImage"
        app:layout_constraintStart_toStartOf="@id/tasteImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>