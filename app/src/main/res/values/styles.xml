<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#353535</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
    </style>

    <style name="BottomNavigationViewTheme">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="itemIconTint">@drawable/selector_custom_navigationbar</item>
        <item name="itemTextColor">@drawable/selector_custom_navigationbar</item>
    </style>

</resources>
