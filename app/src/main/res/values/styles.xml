<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#353535</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
    </style>

    <style name="BottomNavigationViewTheme">
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="itemIconTint">@drawable/selector_custom_navigationbar</item>
        <item name="itemTextColor">@drawable/selector_custom_navigationbar</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic_bold</item>
        <item name="textColorAlertDialogListItem">@android:color/white</item>
        <item name="android:windowTitleStyle">@style/windowTitleStyle</item>
    </style>

    <style name="windowTitleStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/colorSecondary</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic_bold</item>
    </style>

    <style name="AddPlaylistDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
        <item name="android:colorButtonNormal">@color/colorSecondary</item>
    </style>

    <style name="numberPickerCustomTheme">
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:fontFamily">@font/nanum_barun_gothic</item>
    </style>
</resources>
